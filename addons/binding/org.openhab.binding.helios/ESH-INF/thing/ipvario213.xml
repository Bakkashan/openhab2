<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="helios"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="ipvario213">
		<label>Helios IP Vario</label>
		<description>Helios IP Vario Door Station / Intercom with Firmware v2.13</description>

		<channels>
			<channel id="keypressed" typeId="keypressed" />
			<channel id="keypressedstamp" typeId="timestamp" />
			<channel id="callstate" typeId="callstate" />
			<channel id="calldirection" typeId="calldirection" />
			<channel id="callstatestamp" typeId="timestamp" />
			<channel id="card" typeId="card" />
			<channel id="cardvalid" typeId="cardvalid" />
			<channel id="cardstamp" typeId="timestamp" />
			<channel id="code" typeId="code" />
			<channel id="codevalid" typeId="codevalid" />
			<channel id="codestamp" typeId="timestamp" />
			<channel id="devicestate" typeId="devicestate" />
			<channel id="devicestatestamp" typeId="timestamp" />
            <channel id="audiolooptest" typeId="audiolooptest" />
            <channel id="audioloopteststamp" typeId="timestamp" />
            <channel id="motion" typeId="motion" />
            <channel id="motionstamp" typeId="timestamp" />
                        <channel id="keyreleased" typeId="keyreleased" />
            <channel id="keyreleasedstamp" typeId="timestamp" />
            		</channels>
	
	   <properties>
             <property name="variant">Variant</property>
             <property name="serialNumber">Serial Number</property>
             <property name="hardwareVersion">Hardware Version</property>
             <property name="softwareVersion">Software Version</property>
             <property name="builtType">Build Type</property>
             <property name="deviceName">Device Name</property>
        </properties>
		        
        <config-description>
            <parameter name="ipAddress" type="text" required="true">
                <label>Network Address</label>
                <description>Network address of the Helios IP device</description>
            </parameter>
            <parameter name="username" type="text"  required="true">
                <label>Username</label>
                <description>Username to access REST services on the Helios IP device</description>
            </parameter>
            <parameter name="password" type="text"  required="true">
                <label>Password</label>
                <description>Password to access REST services on the Helios IP device</description>
            </parameter>       
        </config-description>
		
	</thing-type>

	<channel-type id="timestamp">
		<item-type>DateTime</item-type>
		<label>Time Stamp</label>
		<description>Event date and time in CCYY-MM-DDThh:mm:ss format</description>
	</channel-type>
	<channel-type id="keypressed">
		<item-type>String</item-type>
		<label>Key Pressed</label>
		<description>Code of the key pressed</description>
	</channel-type>
	<channel-type id="callstate">
		<item-type>String</item-type>
		<label>Call State</label>
		<description>State of the currently made call</description>
	</channel-type>
	<channel-type id="calldirection">
		<item-type>String</item-type>
		<label>Call Direction</label>
		<description>Direction of the currently made call</description>
	</channel-type>	
	<channel-type id="card">
		<item-type>String</item-type>
		<label>Card ID</label>
		<description>Detected card identification with a 24-64-bit number in the hexadecimal format</description>
	</channel-type>		
	<channel-type id="cardvalid">
		<item-type>Switch</item-type>
		<label>Card Valid Flag</label>
		<description>If the detected card is valid, the  value is ON. If not, the value is set to OFF</description>
	</channel-type>		
	<channel-type id="code">
		<item-type>String</item-type>
		<label>Code Entered</label>
		<description>Numerical code entered, e.g. 1234.</description>
	</channel-type>		
	<channel-type id="codevalid">
		<item-type>Switch</item-type>
		<label>Code Valid Flag</label>
		<description>If the entered code is valid, the  value is ON. If not, the value is set to OFF</description>
	</channel-type>		
	<channel-type id="devicestate">
		<item-type>String</item-type>
		<label>Device State</label>
		<description>State of the Helios device</description>
	</channel-type>
    <channel-type id="audiolooptest">
        <item-type>Switch</item-type>
        <label>Audio Loop Test</label>
        <description>Indicates the result of the audio loop test</description>
    </channel-type>		
    <channel-type id="motion">
        <item-type>Switch</item-type>
        <label>Motion</label>
        <description>Indicates the detection of motion</description>
    </channel-type> 
        <channel-type id="keyreleased">
        <item-type>String</item-type>
        <label>Key Released</label>
        <description>Code of the key released</description>
    </channel-type>
        <channel-type id="switchenabler">
        <item-type>Switch</item-type>
        <label>Switch Enabler</label>
        <description>Activate or deactivate a switch in the Helios device</description>
    </channel-type>
        <channel-type id="trigger">
        <item-type>Switch</item-type>
        <label>Switch Trigger</label>
        <description>Trigger the state of a switch in the Helios device</description>
    </channel-type>
        <channel-type id="io">
        <item-type>Switch</item-type>
        <label>IO</label>
        <description>Activate or deactivate the output of an I/O port of the Helios device</description>
    </channel-type>
           </thing:thing-descriptions>
